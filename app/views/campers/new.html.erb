<h3> Register a new camper </h3>

<div>
<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p style="color:red"><%= error %></p>
    <% end %>
<% end %>
</div>

<%= form_for @camper do |f| %>
    <%=f.label :name %><br>
    <%=f.text_field :name %><br><br>
    <%=f.label :age %><br>
    <%=f.number_field :age %><br><br>
    <%=f.submit "Register"%>
<% end %>